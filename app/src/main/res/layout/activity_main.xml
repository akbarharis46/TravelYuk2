<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020B12"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_marginBottom="166dp"
       android:background="@drawable/perimari"
       android:scaleType="centerCrop"
       app:layout_constraintBottom_toTopOf="@+id/textView7"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="87dp"
       android:text="INDONESIA"
       android:textColor="#FFFFFF"
       android:textSize="13sp"
       app:layout_constraintBottom_toTopOf="@+id/button"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="PULAU SERIBU"
       android:textColor="#FFFFFF"
       android:textSize="22sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView" />

   <Button
       android:id="@+id/button"
       android:layout_width="74dp"
       android:layout_height="0dp"
       android:layout_marginBottom="541dp"
       android:background="@drawable/btnplay"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView" />


   <TextView
       android:id="@+id/textView4"
       android:layout_width="98dp"
       android:layout_height="35dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:layout_marginBottom="355dp"
       android:text="Description"
       android:textColor="#4F4F4F"
       android:textSize="16sp"

       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView"
       app:layout_constraintVertical_bias="1.0" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="381dp"
       android:layout_height="65dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginBottom="266dp"
       android:lineSpacingExtra="2dp"
       android:text="Green bridge from Seatle is really awesome to get hot spot for traveller who is traveling right there with their families"
       android:textColor="#FFF"
       android:textSize="18sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView"
       app:layout_constraintVertical_bias="1.0" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="376dp"
       android:layout_height="94dp"
       android:layout_marginBottom="158dp"
       android:lineSpacingExtra="2dp"
       android:text="Simply dummy text something is nice but you have to aware about the branding of the product itself so keep it happy and make it more fancy."
       android:textColor="#FFF"
       android:textSize="18sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.457"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView" />

   <Button

       android:layout_width="250dp"
       android:layout_height="55dp"
       android:layout_marginBottom="48dp"
       android:background="@drawable/btnbuy"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.496"
       app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>